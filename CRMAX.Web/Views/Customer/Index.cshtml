
@section scripts{

<script src="~/App/App.js"></script>
<script src="~/App/angCustomerService.js"></script>
<script src="~/App/angCustomerController.js"></script>


}


@{
    ViewBag.Title = "Index";
}

<div ng-app="CRMApp">

    <div ng-controller="angCustomerController">

        <div class="form-group">
            <label>Nombre</label>
            <input type="text" id="txtNombre" ng-model="customer.nombre" class="form-control" />
        </div>

        <div class="form-group">
            <label>Direccion</label>
            <input type="text" id="textDireccion" ng-model="customer.direccion" class="form-control" />
        </div>

        <div class="form-group">
            <label>Telefono</label>
            <input type="text" id="txtTelefono" ng-model="customer.telefono" class="form-control" />
        </div>
      

        <div class="form-group">
            <label>Correo</label>
            <input type="text" id="txtCorreo" ng-model="customer.correo" class="form-control" />
        </div>

    </div>

</div>

